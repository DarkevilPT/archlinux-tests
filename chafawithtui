#!/bin/bash

# Check for chafa
if ! command -v chafa &> /dev/null; then
    echo "‚ùå chafa is not installed. Install it with: sudo apt install chafa";
    sudo pacman -S chafa -noconfirm
    exit 1
fi

# Get image path
IMAGE="$1"
if [[ -z "$IMAGE" ]]; then
    read -p "üñºÔ∏è  Enter the path to the image: " IMAGE
fi

# Validate file
if [[ ! -f "$IMAGE" ]]; then
    echo "‚ùå File not found: $IMAGE"
    exit 1
fi

# Clear screen and draw UI border
clear
cols=$(tput cols)
rows=$(tput lines)

border_line=$(printf "%${cols}s" | tr ' ' '-')
title="üñºÔ∏è ASCII Viewer - $(basename "$IMAGE")"

# Center title
pad=$(( (cols - ${#title}) / 2 ))
printf "%s\n" "$border_line"
printf "%*s%s\n" $pad "" "$title"
printf "%s\n" "$border_line"

# Show image with chafa
chafa --symbols=block --size=${cols}x$((rows - 6)) "$IMAGE"

